
<style>
   .filter-button {
     display: inline-block;
     background-color: red;
   }

    .filter {
      /* text-align: center; */
      display: inline-block;
      margin-top: 2rem;
      margin-left: 1rem;
      margin-right: 2.6rem;
      opacity: 0.5;
      cursor: pointer;
    }

    .filter p {
      font-size: 0.8rem;
    }

    .filter a {
      text-decoration: none;
    }
    .filter a i,p {
      color: black;
    }

    .filter:hover {
      opacity: 1;
    }

    .tax-info {
        display: none;
    }

    .tax-toggle {
      border: 2px solid black;
      border-radius: 22px;
      padding-top: 1rem;
      padding-left: 1.2rem;
      padding-right: 1.2rem;
      display: inline-block;
      text-align: center;
      margin-bottom: 0;
    }
    

  
    
</style>


<% layout("layouts/boilerplate") %>
<body>

 


<button class="btn btn-outline-secondary d-md-none mb-3 mt-3 filtler-button" type="button" data-bs-toggle="collapse" data-bs-target="#filtersSection" aria-expanded="false" aria-controls="filtersSection"><i class= "fa-solid fa-sliders"></i>Filter</button>

<div id="filtersSection" class="collapse d-md-block" >

  
  
 
    
    <div class="filter mt-6">
      <a href="/listings?category=Trending"><i class="fa-solid fa-fire"></i> 
        <p>Trending</p> </a> 
    </div>

    <div class="filter mt-6">
      <a href="/listings?category=Rooms"><i class="fa-solid fa-bed"></i>
        <p>Rooms</p> </a>  
    </div>


    <div class="filter mt-6">
     
        <a href="/listings?category=Iconic Cities"><i class="fa-solid fa-mountain-city"></i> 
        <p>Iconic cities</p> </a>
    </div>

    <div class="filter mt-6">
       <a href="/listings?category=Mountain"><i class="fa-solid fa-mountain"></i>
        <p>Mountain</p> </a>
    </div>


    <div class="filter mt-6">
      <a href="/listings?category=Castles"><i class="fa-brands fa-fort-awesome"></i>  
        <p>Castles</p> </a>
    </div>


    <div class="filter mt-6">
        <a href="/listings?category=AmazingPools"><i class="fa-solid fa-person-swimming"></i>
        <p>Amazing Pools</p> </a>
    </div>


    <div class="filter mt-6">
       <a href="/listings?category=Camping"><i class="fa-solid fa-campground"></i> 
        <p>Camping</p> </a>
    </div>

    <div class="filter mt-6">
      <a href="/listings?category=Farms"><i class="fa-solid fa-cow"></i>
        <p>Farms</p> </a>
    </div>
    
    <div class="filter mt-6">
     <a href="/listings?category=Arctic"><i class="fa-solid fa-snowflake"></i> 
        <p>Arctic</p> </a>
    </div>


      <div class="filter mt-6">
     <a href="/listings?category=Dome"><i class="fa-solid fa-igloo"></i></i> 
        <p>Dome</p> </a>
    </div>

      <div class="filter mt-6">
     <a href="/listings?category=Boats"><i class="fa-solid fa-ferry"></i></i> 
        <p>Boats</p> </a>
     </div>
    

   
    
  <div class="tax-toggle mb-3 ">
     <div class="form-check form-switch">
  <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
  <label class="form-check-label" for="switchCheckDefault"><p>Display total after tax</p></label>
</div>
</div>
</div>



  <div class="container">
    <div class="row g-4">
      <% for(let listing of allListings) { %>
        <div class="col-12 col-md-6 col-lg-4 mt-12">
          <div class="card shadow-sm border-0 h-100" style="border-radius:18px;">
            <a href="/listings/<%= listing._id %>" style="text-decoration:none; color:inherit;">
              <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="border-radius:18px 18px 0 0;">
              <div class="card-body">
                <p class="fw-bold mb-1"><%= listing.title %></p>
                <p class="mb-0 text-muted">&#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> /night&nbsp;&nbsp; <i class="tax-info"> + 18% GST</i> </p>
              </div>
            </a>
          </div>
        </div>
      <% } %>
    </div>
  </div>


  <script>
    function filterCategory(category) {
      // Redirect to the URL with the selected category
      window.location.href="/listings?category=${category}";
    }
 
    let taxswitch = document.getElementById("switchCheckDefault");

    taxswitch.addEventListener("click", ()=> {
      let taxinfo = document.getElementsByClassName("tax-info");
       for(info of taxinfo) {
        if(info.style.display != "inline") {
          info.style.display = "inline"
        }
        else {
          info.style.display = "none";
        }
       }
        
    })

  </script>

</body>